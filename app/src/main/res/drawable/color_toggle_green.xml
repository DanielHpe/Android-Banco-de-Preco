<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@color/btnPrimaryPressedBorder" />
            <solid android:color="@color/naturalGreen"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@color/btnPrimaryFocusedBorder" />
            <solid android:color="@color/naturalGreen"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@color/btnPrimaryBorder" />
            <solid android:color="@color/naturalGreen"/>
        </shape>
    </item>


</selector>